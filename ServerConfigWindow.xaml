<Window x:Class="Chatroom.ServerConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chatroom"
        mc:Ignorable="d"
        Title="ServerConfigWindow" Height="161" Width="269">
    <Grid Margin="0,0,0,-6">
        <Label Content="Port" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Width="48" Margin="26,29,0,0"/>
        <TextBox x:Name="txbPort" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" Height="22" Text="23333" Margin="79,31,0,0"/>
        <Button x:Name="btnConfirm" Content="Confirm" HorizontalAlignment="Left" Height="25" Margin="21,88,0,0" VerticalAlignment="Top" Width="81" Click="btnConfirm_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Height="25" Margin="143,88,0,0" VerticalAlignment="Top" Width="81" Click="btnCancel_Click"/>

    </Grid>
</Window>
