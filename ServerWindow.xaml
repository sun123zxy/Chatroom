<Window x:Class="Chatroom.ServerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chatroom"
        mc:Ignorable="d"
        Title="ServerWindow" Height="480" Width="640" Loaded="ServerWindow_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="160*"/>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="23*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="txbShow" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="620" Height="300" IsEnabled="False"/>
        <TextBox x:Name="txbInput" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Width="620" Height="82"/>
        <Button x:Name="btnSend" Content="Send" HorizontalAlignment="Left" Margin="541,0,0,0" Grid.Row="2" VerticalAlignment="Center" Height="26" Width="89"/>

    </Grid>
</Window>
