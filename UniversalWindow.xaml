<Window x:Class="Chatroom.UniversalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chatroom"
        mc:Ignorable="d"
        Title="UniversalWindow" Height="480" Width="640" Unloaded="UniversalWindow_Unloaded" Loaded="UniversalWindow_Loaded">
    <Grid x:Name="universalWindow">
        <Grid.RowDefinitions>
            <RowDefinition Height="155*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="22*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="txbShow" HorizontalAlignment="Center" Height="290" TextWrapping="Wrap" VerticalAlignment="Center" Width="620" VerticalScrollBarVisibility="Auto" IsReadOnly="True"/>
        <TextBox x:Name="txbInput" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Width="620" Height="90" VerticalScrollBarVisibility="Auto" PreviewKeyDown="TxbInput_PreviewKeyDown"/>
        <Button x:Name="btnSend" Content="Send" HorizontalAlignment="Left" Height="24" Margin="530,0,0,0" Grid.Row="2" VerticalAlignment="Center" Width="88" Click="BtnSend_Click"/>

    </Grid>
</Window>
